# APP SETTINGS ######
# APPLICATION NAME
# Not critical in Dz, you can leave it untouched.
APP_NAME=Dz

# APPLICATON ENVIRONMENT
# Changes Laravel application environment. Used for development purposes.
# Values: production, local
APP_ENV=production

# APPLICATION KEY
# Used for bcrypt2 hashing, it's generated automatically. You can leave it untouched.
APP_KEY=base64:gIUkvEWNXcseX3tsmixVCCIJhEdr7WQCYlyEsr5SwQ8=

# APPLICATION DEBUG MODE
# Raises Ignite error pages for Laravel
APP_DEBUG=1

# APPLICATION URL
# You can leave it untouched.
APP_URL=https://dz.dev

# APPLICATON NOTIFICATION EMAIL
# Changes the e-mail sender that's generated by Dz.
APP_NOTIFICATION_EMAIL=destek@dz.dev

# APPLICATION LANGUAGE
# Sets systemwide language of Dz application.
# Values: tr, en
APP_LANG=en

# SYSTEM SETTINGS #####
# LARAVEL LOG LEVEL
LOG_LEVEL=debug

# LOG LEVEL
# Changes log level of Dz render engine.
# Values: 0 (Extended), 1 (Minimal), 2 (Extension Log), 3 (Extension Log with Details)
NEW_LOG_LEVEL=2

# EXTENSION DEVELOPER MODE
# Activates some extension development features like download, debug messages etc.
EXTENSION_DEVELOPER_MODE=1

# QUEUE DRIVER
# Dz queue driver mode, you can leave it untouched. Documentation exists on Laravel documentation.
QUEUE_DRIVER=redis

# BRAND NAME
# Changes login screen brand name
BRAND_NAME="Dz © 2025"

# AUTH DEFAULT GATE
# Default gate for Dz authentication
DEFAULT_AUTH_GATE=dz

# EXTENSION TIMEOUT
# Extension request timeout parameter, Dz render engine using it
EXTENSION_TIMEOUT=30

# BRANDING ON LOGIN SCREEN
# You can set it from Dz system settings.
# Values: <image url>
BRANDING=

# RENDER ENGINE ADDRESS
# Render engine path of Dz server. You can leave it untouched.
RENDER_ENGINE_ADDRESS=https://127.0.0.1:2806

# HIGH AVAILABILITY MODE
# High availability syncer for Dz. When you enable it, starts syncing between Dz servers on extensions etc.
# Activate it and run on other Dz: php /Dz/server/artisan register_Dz
HIGH_AVAILABILITY_MODE=false

# IGNORE LDAP CONNECTION CERTIFICATE CHECK
# Disables 636 port certificate checking on Dz but it does not enough for checking.
# You also need to disable it on ldap.conf file as TLS_REQCERT never
LDAP_IGNORE_CERT=

# DEPRECATED
LOG_PATH=/dz/logs/dz.log
# DEPRECATED
LOG_EXTENSION_PATH=dz/logs/extension.log


# MAIL SETTINGS #####
# MAIL ENABLED
# Enables mail sending
MAIL_ENABLED=false

# MAILER
# Change mail protocol from here, we recommend it leaving it as smtp.
MAIL_MAILER=smtp

# MAIL HOST
# Mail server
MAIL_HOST=0.0.0.0

# MAIL PORT
# Mail server port
MAIL_PORT=1025

# MAIL USERNAME
# The user that exists on mail server
MAIL_USERNAME=

# MAIL PASSWORD
# Password of the user that you set in username field
MAIL_PASSWORD=

# MAIL ENCRYPTION
# Values: tls, ssl
MAIL_ENCRYPTION=tls


# MARKET SETTINGS #####
# MARKET URL
# The extension market API url
MARKET_URL=https://market.dz.dev

# MARKET CLIENT ID
# Client ID for authenticated API's for market.
MARKET_CLIENT_ID=

# MARKET CLIENT SECRET
# Client secret for authenticated API's for market.
MARKET_CLIENT_SECRET=


# AUTH SETTINGS #####
# ACTIVATE KEYCLOAK LOGIN
KEYCLOAK_ACTIVE=false

# KEYCLOAK CLIENT ID
# Values retrieved from Keycloak Panel > Clients > <client> > Account > Credentials
KEYCLOAK_CLIENT_ID=

# KEYCLOAK CLIENT SECRET
# Values retrieved from Keycloak Panel > Clients > <client> > Account > Credentials
KEYCLOAK_CLIENT_SECRET=

# KEYCLOAK REDIRECT URI
# Value is https://<REPLACE_IT_WITH_DZ_URL>/keycloak/callback
KEYCLOAK_REDIRECT_URI=https://<REPLACE_IT_WITH_DZ_URL>/keycloak/callback

# KEYCLOAK BASE URL
# You can set it from Keycloak panel
# Example value: http://<KEYCLOAK_URL>/auth
KEYCLOAK_BASE_URL=

# KEYCLOAK REALM
# Replace it with your realm name
KEYCLOAK_REALM=

# OTP ENABLED
# Activate Google Authenticator service for 2FA logins
OTP_ENABLED=false

#  SESSION EXPIRES ON CLOSE
# Changes session expiration behavior
AUTH_SESSION_EXPIRES_ON_CLOSE=false
BROADCAST_DRIVER=log


